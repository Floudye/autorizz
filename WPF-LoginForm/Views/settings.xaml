<Page x:Class="WPF_LoginForm.Views.settings"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_LoginForm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="settings">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- первая строка занимает всю доступную высоту -->
            <RowDefinition Height="Auto"/>
            <!-- вторая строка подстроится под содержимое -->
        </Grid.RowDefinitions>

        <local:Toggle x:Name="BtnToggle"
                      Width="40" 
                      Height="30"
                      MouseLeftButtonDown="SwitchToggle_MouseLeftButtonDown"
                      VerticalAlignment="Top"/>
        <!-- выравнивание кнопки вверх -->

        <TextBlock Text="сменить тему" Foreground="AliceBlue" HorizontalAlignment="Center"
                   Margin="35"/>
    </Grid>
</Page>